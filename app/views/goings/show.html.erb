<div class="row form">
  <div class="col-lg-12">

  <% if false %>
    <span><%= going.task.title %></span><br>
    <span><%= going.task.detail %></span>
  <% end %>
  
    <%= form_for(@comment) do |f| %>
    <h4>進捗</h4>
    <h3><%= @going.text %></h3>
    <div class="form-group">
        <%= f.text_area :text, placeholder: "コメントを入力してください", cols:"30", rows:"10", autofocus:"true", class:"form-control" %>
      </div>
      <%= f.hidden_field :going_id %>
      <%= f.submit "コメントする", class:"btn btn-primary withripple"%>
    <% end %>

    <h4>コメント一覧</h4>

    <%= render partial: "goings/comment", collection: @comments %>

  </div>
</div>